<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18"
            fx:controller="com.gregorgott.mathtrainer.ResultController">
    <bottom>
        <Button mnemonicParsing="false" onAction="#backToMenu" text="Back to main menu" BorderPane.alignment="CENTER"/>
    </bottom>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <center>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0" BorderPane.alignment="CENTER">
            <Label fx:id="pointsLabel">
                <font>
                    <Font size="28.0"/>
                </font>
            </Label>
            <Label fx:id="mistakesLabel"/>
            <Label fx:id="gradeLabel"/>
        </VBox>
    </center>
</BorderPane>
